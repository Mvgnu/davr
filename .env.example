# --- Authentication --- 
# Used by NextAuth.js - Generate one with: openssl rand -base64 32
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET"
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# --- Database --- 
# Standard PostgreSQL connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# --- Application --- 
# Public URL for client-side API calls (if different from NEXTAUTH_URL)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --- Image Storage (Hetzner S3 Compatible) --- 
# Replace with your Hetzner Object Storage details
HETZNER_S3_ENDPOINT="https://your-region.hetznerobjects.com" 
HETZNER_S3_REGION="your-region" # e.g., eu-central-1
HETZNER_S3_BUCKET_NAME="your-bucket-name"
HETZNER_S3_ACCESS_KEY_ID="YOUR_ACCESS_KEY_ID"
HETZNER_S3_SECRET_ACCESS_KEY="YOUR_SECRET_ACCESS_KEY"
# Optional: Public URL base if your bucket is public or you use a CDN
# HETZNER_S3_PUBLIC_URL="https://your-bucket-name.your-region.hetznerobjects.com" 